{
  "name": "nft-sales-twitter-bot",
  "version": "0.0.1",
  "description": "",
  "author": "chopper",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "cli": "nest start --entryFile cli.module.js --",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:prod-with-watchdog": "concurrently npm:start:prod --restart-tries -1 --restart-after 5000",
    "test": "jest --runInBand --detectOpenHandles --forceExit && jest-coverage-badges",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@nestjs/axios": "0.0.7",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "axios": "^0.26.1",
    "concurrently": "^7.2.2",
    "currency.js": "^2.0.4",
    "discord.js": "^13",
    "dotenv": "^16.0.0",
    "ethers": "^5.6.1",
    "jest-coverage-badges": "^1.1.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "service": "^0.1.4",
    "twitter-api-v2": "^1.15.0",
    "web3-utils": "^1.7.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "src/extensions"
    ],
    "coverageReporters": [
      "json-summary",
      "html",
      "cobertura"
    ],
    "collectCoverage": true,
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
